{
    "layer": "top",
    "modules-left": [
		"hyprland/workspaces",
		"niri/workspaces"
	],
    "modules-right": [
		"tray",
		"mpris",
		"battery",
		"clock"
	],
    "hyprland/workspaces": {
        "format": "<b>{id}</b>"
    },
    "battery": {
        "format": "{icon}  {capacity}%",
        "format-icons": ["", "", "", "", ""]
    },
    "clock": {
		"format": " {:%Y-%m-%d %H:%M:%S}",
		"interval": 1,
        "tooltip": false
    },
	"mpris": {
		"dynamic-len": 60,
		"format": "<b>{status_icon}</b> {dynamic}",
		"status-icons": {
			"playing": "▶",
			"paused": "⏸"
		},
        "dynamic-order": ["title", "artist", "album"]
	},
    "tray": {
        "icon-size": 14,
        "spacing": 10,
        "icon-size": 18
    }
}
