{
    "layer": "top",
    "modules-left": [
		"hyprland/workspaces"
	],
    "modules-center": [
		"hyprland/window"
	],
    "modules-right": [
		"mpris",
		"battery",
		"clock"
	],
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": ["", "", "", "", ""]
    },
    "clock": {
        "format": "{:%a, %d. %b %H:%M}"
    },
	"mpris": {
		"format": "<b>{status_icon}</b> {dynamic}",
		"status-icons": {
			"playing": "▶",
			"paused": "⏸"
		}
	}
}
