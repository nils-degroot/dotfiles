{
    "layer": "top",
    "modules-left": [
		"hyprland/workspaces"
	],
    "modules-center": [
		"hyprland/window"
	],
    "modules-right": [
		"mpris",
		"battery",
		"clock",
		"tray"
	],
    "battery": {
        "format": "{icon}  {capacity}%",
        "format-icons": ["", "", "", "", ""]
    },
    "clock": {
		"format": " {:%Y-%m-%d %H:%M:%S}",
		"interval": 1
    },
	"mpris": {
		"dynamic-len": 60,
		"format": "<b>{status_icon}</b> {dynamic}",
		"status-icons": {
			"playing": "▶",
			"paused": "⏸"
		}
	},
    "tray": {
        "icon-size": 14,
        "spacing": 10,
        "icon-size": 18
    }
}
